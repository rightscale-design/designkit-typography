{
  "name": "designkit-typography",
  "version": "1.0.0",
  "description": "Sass module for typography at RightScale.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-typography.git"
  },
  "author": {
    "name": "Jason Melgoza",
    "email": "jason@rightscale.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/rightscale-design/designkit-typography#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "bourbon": "^4.2.7",
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2"
  },
  "scripts": {
    "start": "npm run build:serve",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "build:scss": "./bin/scss",
    "build:prefix": "postcss -u autoprefixer -b 'last 2 versions' < src/css/_designkit-typography.css > dist/designkit-typography.css",
    "build:minify": "cleancss -o dist/designkit-typography.min.css dist/designkit-typography.css",
    "build:all": "npm run build:scss && npm run build:prefix && npm run build:minify",
    "build:serve": "run-p watch"
  }
}
